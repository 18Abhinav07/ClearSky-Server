# Server
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
MONGODB_URI=mongodb://localhost:27017/clearsky
MONGODB_TEST_URI=mongodb://localhost:27017/clearsky_test

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
SIGNATURE_MESSAGE=Login to Sensor App

# Device Limits
MAX_DEVICES_PER_PROVIDER=3

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# Logging
LOG_LEVEL=debug

# AI & LLM Services
TOGETHER_API_KEY=

# IPFS / Pinata Configuration
PINATA_JWT=
IPFS_GATEWAY_URL=https://gateway.pinata.cloud
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=5000

# Verification Configuration
MERKLE_HASH_ALGORITHM=sha256
CONTENT_HASH_ALGORITHM=sha256
MAX_BATCHES_PER_RUN=10

# Data Ingestion Configuration
# Maximum files to process per cron run (default: 3)
# Lower = slower but less resource intensive, Higher = faster but more resource intensive
MAX_FILES_PER_RUN=3

# Cron Job Schedules (cron syntax)
# Data Ingestion: Reads CSV files from data/ folder and creates PENDING readings (default: every 10 min)
CRON_DATA_INGESTION=*/10 * * * *

# Batch Processor: Marks PENDING → PROCESSING (default: every 2 min for testing)
CRON_BATCH_PROCESSOR=*/2 * * * *

# Verifier: Processes PROCESSING → VERIFIED with Merkle + IPFS (default: every 4 min)
CRON_VERIFIER=*/4 * * * *

# Individual Derivative: VERIFIED → DERIVED_INDIVIDUAL (default: every 6 min)
CRON_DERIVATIVE_INDIVIDUAL=*/6 * * * *

# Meta Derivative: Monthly aggregation (default: every 8 min for testing)
CRON_DERIVATIVE_META=*/8 * * * *
