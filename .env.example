# Server Configuration
NODE_ENV=development
PORT=3000

# Database
MONGODB_URI=mongodb://localhost:27017/clearsky
MONGODB_TEST_URI=mongodb://localhost:27017/clearsky_test

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this
SIGNATURE_MESSAGE="Login to ClearSky"

# External Services
TOGETHER_API_KEY= # Your API key for Together AI
PINATA_JWT= # Your JWT for Pinata IPFS service

# Blockchain & Story Protocol
# Story Protocol Testnet (Aeneid) RPC URL
RPC_PROVIDER_URL=https://aeneid.storyrpc.io

# Private key for the wallet that will pay for gas fees on Story Protocol
STORY_PRIVATE_KEY=0x...

# Private key for the platform wallet that will initially mint and hold the NFTs
# NOTE: This should be a DIFFERENT wallet from STORY_PRIVATE_KEY for security
PLATFORM_WALLET_PRIVATE_KEY=0x...

# Story Protocol's pre-deployed SPG NFT contract on Iliad testnet
# You need to deploy an SPG NFT collection first or use Story's default
STORY_SPG_NFT_CONTRACT=0x...

# The ID of the PIL license terms registered via the one-time script
# Run: npm run story:register-license
LICENSE_TERMS_ID=
